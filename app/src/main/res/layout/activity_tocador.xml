<?xml version="1.0" encoding="utf-8"?>
<TabHost android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/tabHost1"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#78ce6b"
            android:focusable="true"
            android:touchscreenBlocksFocus="true"
            android:layoutMode="opticalBounds"></TabWidget>

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:id="@+id/Lista"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:clickable="false"
                android:weightSum="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/musica"
                    android:background="#fd9311">

                    <ImageButton
                        android:layout_width="80px"
                        android:layout_height="80px"
                        android:id="@+id/player"
                        android:src="@android:drawable/ic_media_play"
                        android:layout_alignParentTop="true"
                        android:layout_toStartOf="@+id/imageBtSair" />

                    <ImageButton
                        android:layout_width="80px"
                        android:layout_height="80px"
                        android:id="@+id/pausa"
                        android:src="@android:drawable/ic_media_pause"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/imageBtSair" />

                    <ImageButton
                        android:layout_width="80px"
                        android:layout_height="80px"
                        android:id="@+id/proximo"
                        android:src="@android:drawable/ic_media_next"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true" />

                    <ImageButton
                        android:layout_width="150px"
                        android:layout_height="100px"
                        android:id="@+id/imageBtSair"
                        android:src="@android:drawable/ic_menu_close_clear_cancel"
                        android:layout_marginBottom="30dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Nome da MÃºsica"
                        android:id="@+id/nomenatela"
                        android:textAlignment="center"
                        android:textColor="#161512"
                        android:textSize="16dp"
                        android:autoText="false"
                        android:allowUndo="false"
                        android:elegantTextHeight="false"
                        android:maxLength="350"
                        android:maxHeight="350dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_below="@+id/player"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="133dp" />

                    <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:id="@+id/progressBar"
                        android:layout_above="@+id/imageBtSair"
                        android:layout_centerHorizontal="true" />

                    <ImageButton
                        android:layout_width="80px"
                        android:layout_height="80px"
                        android:id="@+id/anterior"
                        android:src="@android:drawable/ic_media_previous" />

                    <SeekBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/seekBar"
                        android:background="#1978d8"
                        android:layout_above="@+id/progressBar"
                        android:layout_alignStart="@+id/progressBar"
                        android:layout_marginBottom="27dp"
                        android:layout_alignEnd="@+id/progressBar" />


                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/Play"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <RelativeLayout
                    android:id="@+id/lista"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#9d41e8c9">

                    <ListView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/listademusicas"
                        android:layout_gravity="right"
                        android:background="#53c3ef"
                        android:scrollingCache="false"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:layout_width="10px"
                        android:layout_height="11px"
                        android:id="@+id/nomedamusica"
                        android:textColor="#fffafa" />


                </RelativeLayout>


            </LinearLayout>

        </FrameLayout>
    </LinearLayout>
</TabHost>

